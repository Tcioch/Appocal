@model Appocal.ViewModels.BusinessListViewModel

@{
    ViewBag.Title = "Lista firm";
}

<h2>Lista firm:</h2>

<table class="table table-striped table-responsive table-hover col-12">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nazwa</th>
            <th scope="col">Skrócony opis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var business in Model.Businesses)
        {
            <tr>
                <td class="widhOfContent" scope="row">@Html.ActionLink(business.Name, "show", "BusinessSite", new { name = business.Name }, new { })</td> 
                <td>@business.ShortDescription</td>
            </tr>
        }
    </tbody>
</table>