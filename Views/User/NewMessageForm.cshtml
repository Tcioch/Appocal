@model Appocal.ViewModels.MessageViewModel

@{
    ViewBag.Title = "Napisz wiadomość";
}

<h2>Wiadomość do @Model.ReciverName</h2>

@using (Html.BeginForm("SendMessage", "User"))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container">
        <div>
            <label>Wiadomość</label>
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Message, 5, 1, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3">
                @Html.HiddenFor(m => m.ReciverName)
                @Html.HiddenFor(m => m.SenderName)
                <input type="submit" class="btn btn-primary" value="Wyślij" />
            </div>
        </div>
    </div>
}