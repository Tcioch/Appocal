@model Appocal.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Zarejestruj";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Utwórz nowe konto.</h4>
    <h5>Wybierz typ konta:</h5>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-primary active">
            <input type="radio" name="userType" value="IndividualForm" autocomplete="off" checked />
            Indywidualne
        </label>
        <label class="btn btn-primary">
            <input type="radio" name="userType" value="BusinessForm" autocomplete="off" />
            Biznesowe
        </label>
    </div>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div id="registrationForm">
        @Html.Partial("IndividualForm")
    </div>

   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('input[type=radio][name=userType]').change(function () {
                var url = '@Url.Action("GetPartialView", "Account")';
                var partialView = this.value;
                console.log(url);
                console.log(partialView);
                $.ajax({
                    type: "POST",
                    url: url + "?viewName=" + partialView
                }).done(function (result) {
                    $('#registrationForm').html(result);
                }).fail(function (e) {
                    console.log(e.responseText);
                });
            });



        }); 
    </script>

}
