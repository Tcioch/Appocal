@model Appocal.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj";
}

<div class="col-12 col-md-8 col-lg-6 m-auto">
<p class="text-success">@ViewBag.StatusMessage</p>
    <h3>Zmień ustawienia konta</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt class="mb-3">Hasło:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword", new { }, new { @class="btn btn-outline-primary"})
            }
        </dd>
    </dl>
</div>
